{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Comment'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Comment'|trans }}</h1>
    {% if book is defined and book|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'Id'|trans }}</dt>
            <dd>{{ comment.Id }}</dd>
            <dt>{{ 'Context'|trans }}</dt>
            <dd>{{ comment.context }}</dd>
            <dt>{{ 'Volume'|trans }}</dt>
            <dd>{{ comment.volume }}</dd>
        </dl>
        <p>
            <a href="{{ url('comment_index') }}" title="{{ 'back to list'|trans }}">
                {{ 'back'|trans }}
            </a>
        </p>


    {% else %}
        <p>
            {{ 'Empty'|trans }}
        </p>
    {% endif %}
{% endblock %}